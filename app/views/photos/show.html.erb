<div class="modal-dialog" style="display: table">
  <div class="modal-content">

    <div class="modal-body">
      <div class="photo">
        <%= image_tag @photo.image.full.url if @photo.image %>
      </div>
      <div class="row photo-description">
        <div class="col-lg-3">
          <div class="author">
            <%= image_tag(@photo.user.gravatar, class:'avatar') %>
            <%= @photo.user.name %>
          </div>
        </div>
        <div class="col-lg-9">
          <% unless @photo.comment.blank? %>
            <div class="comment">
              <blockquote>
                <%= simple_format @photo.comment %>
              </blockquote>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>

  </div>
</div>